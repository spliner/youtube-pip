{
  "name": "Youtube PIP",
  "version": "0.2.0",
  "manifest_version": 2,
  "description": "Picture in picture for YouTube.",
  "icons": 
  {
	"16": "images/icon16.png",
	"48": "images/icon48.png",
	"128": "images/icon128.png"
  },
  "page_action":
  {
	"default_icon":
	{
		"19": "images/icon19.png",
		"38": "images/icon38.png"
	},
	"default_title": "Open in PIP"
  },
  "background": 
  { 
	"persistent": true,
	"page": "/app/background.html"
  },
  "permissions" : 
  [
    "tabs",
    "contextMenus",
    "http://www.youtube.com/",
    "https://www.youtube.com/",
    "http://www.youtube.com/embed/",
    "https://www.youtube.com/embed/",
    "http://www.twitch.tv/",
    "https://www.twitch.tv/"
  ]
}